<%- include('./components/header') %> <%- include('./components/navbar') %>

  <div class="container text-center">
    <h3>Create Account</h3>
    <form action="/signup" method="post">
      <input type="text" class="form-control mt-3" name="username" placeholder="username">
      <input type="email" name="email" class="form-control mt-3" placeholder="email">
      <input type="password" name="password" class="form-control mt-3" placeholder="password">
      <input type="password" name="confirmPassword" class="form-control mt-3" placeholder="Confirm Password">
      <input type="submit" value="Create Account" class="btn btn-primary mt-3">
    </form>
    <br>
    <div>
      Already have account? <a href="/login">Login</a>
    </div>
  </div>

